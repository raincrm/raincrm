      </div>

      <!-- Divider -->
      <div class="w-full h-px bg-[#e4e4e4]"></div>
    </div>

    <!-- Bottom Navigation -->
    <div class="flex flex-col gap-2 px-4">
      <!-- Integrations -->
      <%= link_to integrations_path, class: "flex items-center h-9 p-2 rounded gap-3 hover:bg-[#f2f2f2] #{active_nav_class('integrations')}" do %>
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" class="w-5 h-5 <%= nav_icon_class('integrations') %>">
          <path d="M8.75 3.75H3.75V8.75H8.75V3.75Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
